{
  "steps": [
    {
      "name": "python:3.10.8-slim-buster",
      "entrypoint": "/bin/sh",
      "args": [
        "-c",
        "cd ./prediction-api && python -m venv .myenv && . .myenv/bin/activate && pip install -r requirements_dev.txt && python -m pytest --junitxml=${SHORT_SHA}_test_log.xml",
        "--user"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "gcr.io/$PROJECT_ID/prediction-api:0.0.1",
        "./prediction-api"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "gcr.io/$PROJECT_ID/prediction-api:0.0.1"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "gcr.io/$PROJECT_ID/prediction-ui:0.0.1",
        "./prediction-ui"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "gcr.io/$PROJECT_ID/prediction-ui:0.0.1"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
      "args": [
        "run",
        "deploy",
        "prediction-api",
        "--image",
        "gcr.io/$PROJECT_ID/prediction-api:0.0.1",
        "--region",
        "us-central1",
        "--platform",
        "managed",
        "--allow-unauthenticated",
        "--update-env-vars",
        "PORT=5000,PROJECT_ID=$PROJECT_ID,MODEL_REPO=$_MODEL_REPO,MODEL_NAME=model.pkl",
        "--no-cpu-throttling",
        "--memory",
        "4 Gi"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
      "args": [
        "run",
        "deploy",
        "prediction-ui",
        "--image",
        "gcr.io/$PROJECT_ID/prediction-ui:0.0.1",
        "--region",
        "us-central1",
        "--platform",
        "managed",
        "--allow-unauthenticated",
        "--update-env-vars",
        "PORT=5000,PREDICTOR_API=https://prediction-api-komvtsziza-uc.a.run.app:5000/diabetes_predictor",
        "--no-cpu-throttling",
        "--memory",
        "4 Gi"
      ]
    }
  ],
  "substitutions": {
    "_MODEL_REPO": "mlops_models"
  }
}